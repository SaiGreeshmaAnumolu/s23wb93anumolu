extends layout

block content
  h1= title

  -const results = [{ brand: "Nike",  color: "Blue", price: 150 },{ brand: "Zara", color: "green", price: 1500 },{ brand: "H&M", color: "white", price: 1000 }]

    div(class="container-fluid")
    div(class="row")
      each item,index in results
        div(class="col-sm-2" onclick=`buy(${index})`)
          p Brand: #{item.brand}
          p Color: #{item.color}
          p Price: $#{item.price}
    script.
      function buy(index)
      {
        alert(`You purchased Item ${index+1}`)
      }
  